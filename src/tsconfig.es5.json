{
    "compilerOptions": {
        "declaration": true,
        "module": "es2015",
        "target": "es5",
        "baseUrl": ".",
        "stripInternal": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "outDir": "../build",
        "rootDir": ".",
        "lib": ["es2015", "dom"],
        "skipLibCheck": true,
        "types": [],
        "paths": {
            "moment": ["../node_modules/moment/min/moment.min.js"]
        }
    },
    "angularCompilerOptions": {
        "annotateForClosureCompiler": true,
        "strictMetadataEmit": true,
        "skipTemplateCodegen": true,
        "flatModuleOutFile": "ngx-relativity-date.js",
        "flatModuleId": "ngx-relativity-date"
    },
    "files": ["./index.ts"]
}
